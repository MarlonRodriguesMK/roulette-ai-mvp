# ======================================================
# .ENV.EXAMPLE - Variáveis de ambiente
# ======================================================

# Application
PROJECT_NAME="Roulette AI"
VERSION="2.0.0"
DEBUG=False

# API
API_V1_PREFIX="/api/v1"

# CORS - (Railway) pode ser JSON (lista) OU string separada por vírgula
# Exemplo (recomendado no Railway):
ALLOWED_ORIGINS="http://localhost:5173,https://SEU-FRONTEND.vercel.app"

# Sessions
SESSION_TIMEOUT=3600
MAX_HISTORY_PER_SESSION=1000
SESSION_CLEANUP_INTERVAL=300

# OCR
OCR_MAX_FILE_SIZE=10485760
OCR_ALLOWED_FORMATS=["image/jpeg","image/png","image/jpg"]

# AI Engine
DEFAULT_HISTORY_LIMIT=50
MAX_HISTORY_LIMIT=200
MIN_HISTORY_LIMIT=10

# Redis (opcional - para produção)
REDIS_URL="redis://localhost:6379"
USE_REDIS=False

# Database (opcional - para produção)
DATABASE_URL="sqlite:///./roulette_ai.db"
USE_DATABASE=False

# Logging
LOG_LEVEL="INFO"

# Server
PORT=8000
HOST="0.0.0.0"
RELOAD=True